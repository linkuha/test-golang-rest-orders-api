# EditorConfig plugin helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
tab_width = 8

[*.go]
indent_size = 4
tab_width = 4

[*.sql]
indent_size = 4
tab_width = 4

[*.{diff,md}]
trim_trailing_whitespace = false

[*.js]
indent_size = 4

[*.css]
indent_size = 4

[{*.phtml,*.php5,*.php4,*.php,*.inc}]
max_line_length = 120
indent_size = 4
insert_final_newline = false

[*.conf]
indent_size = 4

[{Makefile,**/Makefile}]
indent_style = tab
indent_size = 8
